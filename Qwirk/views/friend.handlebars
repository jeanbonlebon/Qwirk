<div class="wrapper" style="overflow-y: scroll; height:100%;">
    <div class="wrap">
      <section id="conversation" class="friend_infos">
          {{#each selectedUser}}
              <img src="/images/{{avatar}}" class="responsive-img">
              <p class="username">{{username}}</p>
          {{/each}}

          <div class="test" hidden>{{user.username}}</div>
          <div id="relation" hidden>{{#each selectedRelation}}{{relation}}{{/each}}</div>
          <div id="relation_me" hidden>{{user.username}}</div>



      </section>
      <section class="console">

          <div class="row send">
              <div class="row utilities">
                  <div class="col s10">

                  </div>
                  <div class="col s1"><a href="#"><i class="material-icons">emojis</i></a></div>
                  <div class="col s1"></div>
              </div>
              <div class="col s11">
                  <input id="data" type="text" data-emojiable="true">
              </div>
              <div class="col s1">
                  <a id="datasend" href="#"><i class="material-icons">replay</i></a>
              </div>
          </div>

      </section>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/socket_front.js"></script>
<script src="/javascripts/date_utils.js"></script>
